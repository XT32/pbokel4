<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="500" prefWidth="600" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.LoginController">
    <children>
        <!-- Judul Aplikasi -->
        <Label layoutX="83.0" layoutY="105.0" text="SeaSell">
            <font>
                <Font name="Humnst777 Blk BT Black" size="24.0" />
            </font>
        </Label>

        <!-- TextField untuk Username -->
        <TextField fx:id="usernameField" layoutX="121.0" layoutY="182.0" promptText="Enter Username" />

        <!-- PasswordField untuk Password -->
        <PasswordField fx:id="passwordField" layoutX="121.0" layoutY="238.0" promptText="Enter Password" />

        <!-- Tombol Login -->
        <Button layoutX="121.0" layoutY="291.0" mnemonicParsing="false" onAction="#actionMasuk" text="LOGIN">
            <font>
                <Font name="CountryBlueprint" size="12.0" />
            </font>
        </Button>

        <!-- Label untuk pertanyaan "Don't have an account?" -->
        <Label layoutX="70.0" layoutY="358.0" text="Don't have an account?">
            <font>
                <Font name="ChaparralPro-Regular" size="12.0" />
            </font>
        </Label>

        <!-- Tombol Sign Up -->
        <Button layoutX="185.0" layoutY="350.0" mnemonicParsing="false" onAction="#actionSignUp" style="-fx-background-color: transparent; -fx-border-color: transparent;" text="Sign Up" textFill="#1f46f2">
            <font>
                <Font name="CountryBlueprint" size="12.0" />
            </font>
        </Button>

        <!-- Labels for Username and Password -->
        <Label layoutX="41.0" layoutY="187.0" text="Username:">
            <font>
                <Font name="Humnst777 Blk BT Black" size="12.0" />
            </font>
        </Label>

        <Label layoutX="41.0" layoutY="243.0" text="Password:">
            <font>
                <Font name="Humnst777 Blk BT Black" size="12.0" />
            </font>
        </Label>
      <ImageView fitHeight="328.0" fitWidth="592.0" layoutX="7.0" layoutY="87.0" pickOnBounds="true" preserveRatio="true" />
    </children>
</AnchorPane>
